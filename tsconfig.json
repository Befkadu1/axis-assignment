{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": false,
    "noImplicitAny": false
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
